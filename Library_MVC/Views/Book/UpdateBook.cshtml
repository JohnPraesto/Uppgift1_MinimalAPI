@model Book

<h1>Update Book</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateBook">
            <input asp-for="BookId" hidden />

            <div class="form-group">
                <label asp-for="BookId" class="control-group"></label>
                <input asp-for="BookId" class="form-control" disabled="disabled"/>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-group"></label>
                <input asp-for="Title" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="Author" class="control-group"></label>
                <input asp-for="Author" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Genre" class="control-group"></label>
                <input asp-for="Genre" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Published" class="control-group"></label>
                <input asp-for="Published" class="form-control" />
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" />@Html.DisplayNameFor(book => book.IsAvailable)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="BookIndex">Back to All Books</a>
</div>